# Environment Configuration Example
# Copy this to .env and update with your values

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development
WORKERS=2

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
MASTER_API_KEY=your-secure-master-api-key-here

# GitHub API (Optional - for higher rate limits)
GITHUB_TOKEN=

# Cache Configuration
AUGMENTS_CACHE_DIR=~/.cache/augments-mcp-server
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_DEMO_PER_MINUTE=100
RATE_LIMIT_DEMO_PER_HOUR=1000
RATE_LIMIT_PREMIUM_MULTIPLIER=10

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://mcp.augments.dev,https://augments.dev,http://localhost:3000

# Debug Mode
DEBUG=false