# Augments MCP Server Environment Variables
# TypeScript v3.0 Configuration

# GitHub API Token (optional, but recommended for higher rate limits)
GITHUB_TOKEN=

# Upstash Redis Configuration (required for caching and rate limiting in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
PREMIUM_ENABLED=false

# Cache Settings
ENABLE_AUTO_CACHE=false
ENABLE_HOT_RELOAD=true

# ========================
# Legacy Python Configuration (will be removed in v4.0)
# ========================
# Cache directory (defaults to ~/.cache/augments-mcp-server)
AUGMENTS_CACHE_DIR=/path/to/cache

# Cache TTL in seconds (defaults to 3600 = 1 hour)
AUGMENTS_CACHE_TTL=3600
