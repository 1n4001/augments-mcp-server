{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildCommand": null
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python -m augments_mcp.main streamable-http",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "sleepCommand": null,
    "cronSchedule": null
  },
  "services": [
    {
      "name": "augments-mcp-api",
      "source": {
        "repo": "https://github.com/augmnt/augments-mcp-server"
      },
      "builder": "DOCKERFILE",
      "domains": [
        {
          "domain": "mcp.augments.dev",
          "enableCloudflare": true
        }
      ],
      "envVars": {
        "ENV": "production",
        "WORKERS": "1",
        "LOG_LEVEL": "WARNING",
        "CACHE_TTL": "600",
        "AUGMENTS_CACHE_DIR": "/app/cache",
        "REDIS_POOL_SIZE": "5",
        "ENFORCE_CLOUDFLARE": "true",
        "ENABLE_CLOUDFLARE_PROTECTION": "true",
        "ABUSE_SENSITIVITY": "medium",
        "UVICORN_WS": "wsproto",
        "ENABLE_AUTO_CACHE": "false",
        "ENABLE_HOT_RELOAD": "false",
        "GITHUB_TOKEN": "${{GITHUB_TOKEN}}",
        "MASTER_API_KEY": "${{MASTER_API_KEY}}"
      },
      "resources": {
        "memoryLimit": "512Mi",
        "cpuLimit": "500m"
      }
    }
  ]
}